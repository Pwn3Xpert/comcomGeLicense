#!/bin/bash
mwv="\e[92m"
wtl="\e[91m"
blank="\e[39m"

echo -e $mwv "რადიო სამოყვარულო ლიცენზიის გამოცდის ბილეთები"
echo -e $mwv ""
echo -e $mwv "სწორი პასუხების ფერებით მოსანიშნად გაწერე (true)"
echo -en $mwv "აკრიფე (${wtl}true/false${mwv})>"
read q
clear

if [[ $q == "false" ]]; then
mwv="\e[92m"
wtl=""
blank="\e[39m"
fi
if [[ $q == "true" ]]; then
mwv="\e[92m"
wtl="\e[91m"
blank="\e[39m"
fi
if [[ 'run' == 'run' ]]; then
echo -e $mwv "1. რადიომოყვარულთა საერთაშორისო კავშირის აბრევიატურაა:${blank}
ა) ITU;
${wtl}ბ) IARU;${blank}
გ) ARRL;
დ) DARC."
echo -n "-_*//> "
read b
clear
if [[ $b == 'ბ' ]]; then
echo -e $mwv "2. აუცილებელია თუ არა, რომ რადიომოყვარულმა დაამიწოს მის მიერ
გამოყენებული რადიოსამოყვარულო მოწყობილობა?${blank}
${wtl}ა) აუცილებელია;${blank}
ბ) არ არის აუცილებელი;
გ) ეს დამიკებულია გადამცემის სიმძლავრეზე;
დ) აუცილებელია მხოლოდ ჭექა-ქუხილის შემთხვევაში."
echo -n "-_*//> "
read a
clear
if [[ $a == 'ა' ]]; then
echo -e $mwv "3. რადიოკავშირის ჩატარებისას რადიომოყვარული ვალდებულია
დაასახელოს თავისი და კორესპონდენტის სახმობი ნიშანი:${blank}
ა) მხოლოდ რადიოკავშირის დასაწყისში;
${wtl}ბ) რადიოკავშირის დასაწყისში და დასასრულს;${blank}
გ) საკმარისია ახსენოს კავშირის მსვლელობისას ერთხელ;
დ) ან დაასახელოს მხოლოდ კორესპონდენტის სახმი."
echo -n "-_*//> "
read aa
clear

if [[ $aa == 'ბ' ]]; then
echo -e $mwv "4. თქვენი საანტენო მოწყობილობის უსაფრთხოებაზე პასუხისმგებელია:${blank}
ა) ის პირი ან ორგანიზაცია ვინც დაამონტაჟა თქვენი საანტენო
მოწყობილობა;
ბ) იმ სახლის პატრონი, რომლის სახლის სახურავზეც არის
დამონტაჟებული თქვენი ანტენა;
გ) ის პირი ან ორგანიზაცია, ვინც დაამზადა თქვენი საანტენო
მოწყობილობა;
${wtl}დ) ის პირი, ვისაც ეკუთვნის ეს საანტენო მოწყობილობა."${blank}
echo -n "-_*//> "
read a
clear
if [[ $a == 'დ' ]]; then
echo -e $mwv "5. ჭექა-ქუხილის და ძლიერი ატმოსფერული განმუხტვების დროს თქვენ
ა) წყვეტთ ეთერში გადაცემაზე მუშაობას და ჩართულს ტოვებთ
რადიოსადგურს;
ბ) თუ ეს ხელს არ გიშლით აგრძელებთ ეთერში მუშაობას;
გ) გამორთავთ რადიოსადგურს;
${wtl}დ) გამორთავთ რადიოსამოყვარულო მოწყობილობას და ამიწებთ ოთახში${blank}
${wtl}შემოსულ საანტენო ყველა ფიდერს."${blank}
echo -n "-_*//> "
read aad
clear
if [[ $aad == 'დ' ]]; then
echo -e $mwv "6. ეთერში გასვლა ეკრძალება იმ რადიომოყვარულს:${blank}
${wtl}ა) რომელსაც არ აქვს სამოყვარულო რადიოსადგურის გამოყენების${blank}
${wtl}ნებართვა;${blank}
${wtl}ბ) ვინც ეთერში გასვლისას არ იყენებს სახმობ ნიშანს;${blank}
${wtl}გ) ვისაც ეთერში აქვს უხარისხო ან დამახინჯებული სიგნალი;${blank}
${wtl}დ) რომელიც იმყოფება ალკოჰოლის ან ნარკოტიკული ნივთიერების${blank}
${wtl}ზემოქმედების ქვეშ."${blank}
echo -n "-_*//> "
read a
clear
if [[ $a == 'აბგდ' ]]; then
echo -e $mwv "7. კავშირის რა სახის გამოყენება აქვს “C” კატეგორიის
რადიომოყვარულს 14 მგჰც დიაპაზონში?${blank}
ა) CW და SSB;
ბ) მხოლოდ SSB;
გ) მხოლოდ SW;
${wtl}დ) არც ერთის."${blank}
echo -n "-_*//> "
read a
clear
if [[ $a == 'დ' ]]; then
echo -e $mwv "8. ახალ სიხშირეზე გადასვლისას თქვენ:${blank}
ა) ჯერ უსმენთ სიხშირეს და ამ სიხშირეზე სხვა სუსტი
რადიოსადგურის
ყოფნის შემთხვევაში იწყებთ აქ მუშაობას;
ბ) მოსმენის გარეშე იწყებთ ეთერში მუშაობას;
გ) მოსთხოვთ სიხშირის დატოვებას იქ მყოფ რადიოსადგურს;
${wtl}დ) გულმოდგინედ მოუსმენთ სიხშირეს, იკითხავთ არის თუ არა${blank}
${wtl}დაკავებული სიხშირე და მხოლოდ ამის შემდეგ იკავებთ ამ სიხშირეს."${blank}
echo -n "-_*//> "
read a
clear
if [[ $a == 'დ' ]]; then
echo -e $mwv "9. რადიომოყვარულის მიერ სატარებელი რადიოსადგურის გამოყენების
შემთხვევაში იგი ვალდებულია სახმობის შემდეგ გამოიყენოს:${blank}
ა) /A;
ბ) /MM;
${wtl}გ) /P;${blank}
დ) /M."
echo -n "-_*//> "
read a
clear
if [[ $a == 'გ' ]]; then
echo -e $mwv "10. შეიძლება თუ არა, რომ რადიომოყვარულმა ეთერში მუშაობისას გამოიყენოს
სხვა სახის შემოკლებანი ან კოდები:${blank}
${wtl}ა) არ შეიძლება;${blank}
ბ) დაშვებულია მხოლოდ ადგილობრივი რადიოკავშირების
ჩატარებისას;
გ) შეიძლება."
echo -n "-_*//> "
read a
clear
if [[ $a == 'ა' ]]; then
echo -e $mwv "11. რა სიმძლავრის გამოყენება შეუძლია “C” კატეგორიის რადიოსადგურს:${blank}
${wtl}ა) 100 ვატის;${blank}
ბ) 200 ვატის;
გ) 300 ვატის;
დ) 400 ვატის."
echo -n "-_*//> "
read a
clear
if [[ $a == 'ა' ]]; then
echo -e $mwv "12. თქვენს სიხშირეზე გიკავშირდებათ კონკრეტული რადიოსადგური და
გთხოვთ აუცილებლად დაუთმოთ მას ეს სიხშირე. თქვენ:${blank}
ა) უცხადებთ მას სასტიკ უარს;
ბ) შეუმჩნეველს დატოვებთ მის თხოვნას;
გ) პასუხის გაცემის გარეშე შეწყვეტთ ეთერში მუშაობას;
${wtl}დ) თავაზიანად უპასუხებთ მას და დაუთმობთ ამ სიხშირეს."${blank}
echo -n "-_*//> "
read a
clear
if [[ $a == 'დ' ]]; then
echo -e $mwv "13. რა შემთხვევაშია შესაძლებელი სატელევიზიო, რადიოსამოყვარულო ან
სხვა სიგნალების რეტრანსლირება რადიოსამოყვარულო დიაპაზონებში:${blank}
${wtl}ა) არ შეიძლება;${blank}
ბ) შესაძლებელია შეზღუდვების გარეშე;
გ) შესაძლებელია, თუ გვაქვს შესაბამისი ნებართვა;"
echo -n "-_*//> "
read a
clear
if [[ $a == 'ა' ]]; then
echo -e $mwv "14. ვალდებულია თუ არა რადიომოყვარული, რომ ჩატარებული ყველა
რადიოკავშირის შეიტანოს სააპარატო ჟურნალში?${blank}
ა) აუცილებელია;
${wtl}ბ) არ არის აუცილებელი საერთოდ ჩატარებული ყველა${blank}
რადიოკავშირის შეტანა სააპარატო ჟურნალში;
გ) აუცილებელია ჩატარებული ყველა რადიოკავშირის შეიტანოს
სააპარატო ჟურნალში ულტრამოკლე დიაპაზონებზე ჩატარებული
რადიოკავშირის გარდა."
echo -n "-_*//> "
read a
clear
if [[ $a == 'ბ' ]]; then
echo -e $mwv "15. სტიქიური უბედურების შემთხვევაში რადიოსადგურები გადასცემენ
SOS-ის ან MAYDAY-ს სიგნალებს. რა ტექნიკური განსხვავებაა მათ
შორის?${blank}
ა) არ არის არანაირი განსხვავება;
${wtl}ბ) SOS გადაიცემა ტელეგრაფით, ხოლო MAYDAY - ტელეფონით."${blank}
echo -n "-_*//> "
read a
clear
if [[ $a == 'ბ' ]]; then
echo -e $mwv "16. დაშვებულია თუ არა რადიოკავშირის ჩატარება არასამოყვარულო
სადგურებთან?${blank}
${wtl}ა) არ არის დაშვებული;${blank}
ბ) დაშვებულია;
გ) დაშვებულია მხოლოდ მეორადი გამოყენების დიაპაზონებში."
echo -n "-_*//> "
read a
clear
if [[ $a == 'ა' ]]; then
